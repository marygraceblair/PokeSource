<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Poketto Monstaa Data API - Icons List</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;

            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            width: 100%;
        }

        body {
            font-family: Menlo, Monaco, monospace;
            line-height: 1.4;
        }

        .pkm-list {
            list-style: none;
            padding: 5px;
            margin: 5px;
        }

        .pkm-list-item {
            display: inline-block;
            width: 180px;
            height: 50px;
            padding: 5px;
            margin: 5px;
            background: #fff;
            border: 1px solid #ddd;
            text-align: left;
            vertical-align: middle;
            text-wrap: none;
            text-overflow: ellipsis;
            font-size: 10px;
        }

        .pkm-list-item a {
            display: block;
            width: 100%;
            height: 100%;
        }

        .pkm-list-item a:hover {
            text-decoration: none;
        }

        .pkm-list-item--form {
            background: #f5f5f5;
            border: 1px dotted #999;
        }

        .chain-arrow {
            display: none;
        }

    </style>
</head>

<body>
<div class="main container">
    <h1 class="lead">Poketto Monstaa Data API - Icons List</h1>
    <ul class="pkm-list">
        {% for pkm in icons %}
            <li class="pkm-list-item" title="{{ pkm.form_name|default(pkm.name) }}">
                <a href="{{ pkm.api_url }}" target="_blank">
                    <i class="pkm-icon"><img src="{{ pkm.icon_url }}"/></i>
                    #{{ pkm.id }} - {{ pkm.name }}
                </a>
            </li>
            {% if pkm.forms|length > 0 %}
                {% for form in pkm.forms %}
                    <li class="pkm-list-item pkm-list-item--form">
                        <i class="chain-arrow">â†³</i>
                        <i class="pkm-icon pkm-icon--form"><img src="{{ form.icon_url }}"/></i>
                        {{ form.name }}
                    </li>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </ul>
</div>
<script src="//code.jquery.com/jquery-3.1.1.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>